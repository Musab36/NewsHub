<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.salajim.musab.newshub">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity"></activity>
        <activity android:name=".ui.NewsDetailActivity" />
        <activity android:name=".ui.GeneralNewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.newshub.ui.NewsCategoryActivity" />
        </activity>
        <activity android:name=".ui.TechnologyNewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.newshub.ui.NewsCategoryActivity" />
        </activity>
        <activity android:name=".ui.BusinessNewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.newshub.ui.NewsCategoryActivity" />
        </activity>
        <activity android:name=".ui.NewsCategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.EntertainmentNewsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.salajim.musab.newshub.ui.NewsCategoryActivity" />
        </activity>
        <activity android:name=".ui.NationalGeographicActivity"></activity>
    </application>

</manifest>