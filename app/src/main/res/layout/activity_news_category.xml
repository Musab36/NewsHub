<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salajim.musab.newshub.ui.NewsCategoryActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/news"
        android:id="@+id/background_one"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/news"
        android:id="@+id/background_two"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="12dp"
        android:id="@+id/latestNewsBtn"
        android:text="Latest"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/businessNewsBtn"
        android:text="Business"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@+id/latestNewsBtn"
        android:layout_alignLeft="@+id/latestNewsBtn"
        android:layout_alignStart="@+id/latestNewsBtn"
        android:layout_marginTop="12dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/businessNewsBtn"
        android:layout_alignLeft="@+id/businessNewsBtn"
        android:layout_alignStart="@+id/businessNewsBtn"
        android:layout_marginTop="14dp"
        android:id="@+id/entertainmentNewsBtn"
        android:text="Entertainment"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_below="@+id/entertainmentNewsBtn"
        android:layout_alignLeft="@+id/entertainmentNewsBtn"
        android:layout_alignStart="@+id/entertainmentNewsBtn"
        android:layout_marginTop="16dp"
        android:text="Technology"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/techNewsBtn"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/scienceNewsBtn"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Science"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/techNewsBtn"
        android:layout_alignLeft="@+id/techNewsBtn"
        android:layout_alignStart="@+id/techNewsBtn" />

    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:id="@+id/nationalGeographic"
        android:text="National Geographic"
        android:background="@drawable/falcos"
        android:scaleType="centerCrop"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/scienceNewsBtn"
        android:layout_alignLeft="@+id/scienceNewsBtn"
        android:layout_alignStart="@+id/scienceNewsBtn" />

</RelativeLayout>