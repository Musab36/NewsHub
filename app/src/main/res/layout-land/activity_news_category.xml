<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.salajim.musab.newshub.ui.NewsCategoryActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/news"
        android:id="@+id/background_one"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/news"
        android:id="@+id/background_two"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/latestNewsBtn"
        android:text="Latest News"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginRight="78dp"
        android:layout_marginEnd="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/latestNewsBtn"
        android:layout_alignLeft="@+id/latestNewsBtn"
        android:layout_alignStart="@+id/latestNewsBtn"
        android:id="@+id/generalNewsBtn"
        android:text="General News"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/generalNewsBtn"
        android:layout_alignLeft="@+id/generalNewsBtn"
        android:layout_alignStart="@+id/generalNewsBtn"
        android:layout_marginTop="14dp"
        android:id="@+id/techNewsBtn"
        android:text="Technology News"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/techNewsBtn"
        android:layout_alignLeft="@+id/techNewsBtn"
        android:layout_alignStart="@+id/techNewsBtn"
        android:layout_marginTop="16dp"
        android:text="Business News"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:id="@+id/businessNewsBtn"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/entertainmentNewsBtn"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Entertainment News"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/businessNewsBtn"
        android:layout_alignLeft="@+id/businessNewsBtn"
        android:layout_alignStart="@+id/businessNewsBtn" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/nationalGeographic"
        android:text="National Geographic News"
        android:background="@color/SecondColorAccent"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/entertainmentNewsBtn"
        android:layout_alignLeft="@+id/entertainmentNewsBtn"
        android:layout_alignStart="@+id/entertainmentNewsBtn" />

</RelativeLayout>

